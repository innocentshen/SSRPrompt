{
  "name": "ssrprompt",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @ssrprompt/client dev",
    "dev:server": "pnpm --filter @ssrprompt/server dev",
    "dev:all": "pnpm run --parallel dev dev:server",
    "build": "pnpm --filter @ssrprompt/client build",
    "build:server": "pnpm --filter @ssrprompt/server build",
    "build:all": "pnpm run build && pnpm run build:server",
    "lint": "pnpm --filter '*' lint",
    "typecheck": "pnpm --filter '*' typecheck",
    "db:generate": "pnpm --filter @ssrprompt/server prisma generate",
    "db:push": "pnpm --filter @ssrprompt/server prisma db push",
    "db:migrate": "pnpm --filter @ssrprompt/server prisma migrate dev",
    "db:studio": "pnpm --filter @ssrprompt/server prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
